{
   "name": "__MSG_name__",
   "version": "1.0",
   "manifest_version": 2,
   "default_locale": "en",
   "description": "__MSG_description__",
   "icons": {
       "64": "/assets/img/64.png"
   },
   "permissions": [
       "<all_urls>",
       "tabs",
       "history",
       "unlimitedStorage",
       "contextMenus",
       "storage",
       "topSites",
       "activeTab",
       "webRequest",
       "webRequestBlocking"
   ],
   "background":{
      "scripts":[
         "/assets/js/background.js"
      ]
   },
   "chrome_url_overrides":{
      "newtab":"pages/index.html"
   },
   "browser_action":{
      "default_icon":"/assets/img/64.png",
      "default_title": "__MSG_description__"
   }
}